    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "uv",
            "env": {
                "FLASK_APP": "dremio_mcp_client",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "flask",
                "run",
                "-h",
                "localhost",
                "-p",
                "5001"
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true
        }
    ]
}